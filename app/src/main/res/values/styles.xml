<resources>

    <!-- 基础应用主题 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 在这里自定义你的主题 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecondaryDark</item>
        <item name="android:fontFamily">@font/kanit</item>
    </style>

    <!-- 主题样式 -->
    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 在这里自定义你的主题 -->
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="colorPrimaryDark">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorSecondaryDark</item>
        <item name="android:fontFamily">@font/kanit</item>
    </style>

    <!-- 错误文本样式 -->
    <style name="ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 提示文本样式 -->
    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- TextInputLayout 样式 -->
    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <!-- 引用我们的提示和错误样式 -->
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:background">@drawable/textinput_bg</item>
    </style>

    <!-- 水平分隔线样式 -->
    <style name="DividerHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/dividerColor</item>
    </style>

    <!-- 垂直分隔线样式 -->
    <style name="DividerVertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/dividerColor</item>
    </style>


</resources>
